<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="15dp"
    android:paddingTop="30dp"
    android:paddingBottom="15dp"
    android:background="@color/black"
    tools:context=".ProfileActivity"
    >

    <include
        layout="@layout/banner"
        android:id="@+id/banner_ly"/>
    <ImageView
        android:id="@+id/profilePic_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile__picture_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner_ly"
        android:layout_marginTop="24dp" />
    <TextView
        android:id="@+id/username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profilePic_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        tools:text="User Name"
        android:textColor="@color/white"
        android:textSize="26sp"/>
    <ImageView
        android:id="@+id/verified_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/username_tv"
        app:layout_constraintTop_toTopOf="@id/username_tv"
        app:layout_constraintBottom_toBottomOf="@id/username_tv"
        android:layout_marginStart="10dp"
        android:src="@drawable/verified_badge_ic"/>
    <ImageView
        android:id="@+id/profile_ic_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/username_tv"
        android:layout_marginTop="14dp"
        android:src="@drawable/profile_ic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/profile_ic_iv"
        app:layout_constraintBaseline_toBottomOf="@id/profile_ic_iv"
        android:layout_marginStart="8dp"
        android:text="Profile"
        android:textColor="@color/white"
        android:textSize="20sp"/>
    <View
        android:id="@+id/profile_sep"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="8dp"
        android:background="@color/white"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/profile_ic_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_other" />
    <TextView
        android:id="@+id/email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartof="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_sep"
        android:layout_marginTop="18dp"
        android:text="Email Address"
        android:textColor="@color/white"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/emailView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email_label"
        android:layout_marginTop="8dp"
        tools:text="userEmail@organization.com"
        android:textColor="@color/forgot_blue"
        android:textAlignment="center"
        android:background="@drawable/pill_background"
        android:paddingVertical="8dp"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/creation_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartof="parent"
        app:layout_constraintTop_toBottomOf="@id/emailView"
        android:layout_marginTop="18dp"
        android:text="Created On"
        android:textColor="@color/white"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/dateView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/creation_label"
        android:layout_marginTop="8dp"
        tools:text="xx-xx-20XX"
        android:textColor="@color/forgot_blue"
        android:textAlignment="center"
        android:background="@drawable/pill_background"
        android:paddingVertical="8dp"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/signUp_bttn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/red_bttn"
        app:cornerRadius="50dp"
        android:text="Log out"/>




</androidx.constraintlayout.widget.ConstraintLayout>