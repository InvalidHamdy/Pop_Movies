<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="15dp"
    android:paddingTop="30dp"
    android:paddingBottom="15dp"
    android:background="@drawable/text_poster"
    tools:context=".AllShowsActivity">
    <include
        android:id="@+id/banner_ly"
        layout="@layout/banner"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/ratingFilter_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/banner_ly"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/transparent"
        app:strokeWidth="2dp"
        app:strokeColor="@color/white"
        android:text="Rating"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/yearFilter_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/banner_ly"
        app:layout_constraintStart_toEndOf="@id/ratingFilter_bttn"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:backgroundTint="@color/transparent"
        app:strokeWidth="2dp"
        app:strokeColor="@color/white"
        android:text="Year"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/genreFilter_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/banner_ly"
        app:layout_constraintStart_toEndOf="@id/yearFilter_bttn"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:backgroundTint="@color/transparent"
        app:strokeWidth="2dp"
        app:strokeColor="@color/white"
        android:text="Genre"/>
    <ScrollView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/poster_card_list_item"/>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
