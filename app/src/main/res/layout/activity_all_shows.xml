<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="15dp"
    android:paddingTop="30dp"
    android:paddingBottom="15dp"
    android:background="@drawable/text_poster"
    tools:context=".AllShowsActivity">
    <include
        android:id="@+id/banner_ly"
        layout="@layout/banner"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/ratingFilter_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/banner_ly"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/transparent"
        app:strokeWidth="2dp"
        app:strokeColor="@color/white"
        android:text="Rating"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/yearFilter_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/banner_ly"
        app:layout_constraintStart_toEndOf="@id/ratingFilter_bttn"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:backgroundTint="@color/transparent"
        app:strokeWidth="2dp"
        app:strokeColor="@color/white"
        android:text="Year"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/genreFilter_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/banner_ly"
        app:layout_constraintStart_toEndOf="@id/yearFilter_bttn"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:backgroundTint="@color/transparent"
        app:strokeWidth="2dp"
        app:strokeColor="@color/white"
        android:text="Genre"/>
    <TextView
        android:id="@+id/movieFilter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/genreFilter_bttn"
        app:layout_constraintBottom_toBottomOf="@id/genreFilter_bttn"
        app:layout_constraintStart_toEndOf="@id/genreFilter_bttn"
        android:layout_marginStart="5dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Movies"/>
    <TextView
        android:id="@+id/showsFilter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/genreFilter_bttn"
        app:layout_constraintBottom_toBottomOf="@id/genreFilter_bttn"
        app:layout_constraintStart_toEndOf="@id/movieFilter_tv"
        android:layout_marginStart="5dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Shows"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/genre_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ratingFilter_bttn"
        tools:listitem="@layout/genre_card"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/genre_rv"
        android:layout_marginTop="10dp"
        android:background="@drawable/search_bg"
        android:hint="Search"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"
        android:textColorHint="#BFFFFFFF"
        android:drawablePadding="12dp"
        android:importantForAccessibility="yes"
        android:inputType="text"
        android:drawableStart="@drawable/search_ic"
        android:backgroundTintMode="src_over"
    />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postersRV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/searchEditText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/poster_card_list_item"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
